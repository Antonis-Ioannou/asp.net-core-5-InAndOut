@model asp.net_core_5_InAndOut.Models.Expenses

    <form asp-action="Create" method="post">
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Add Expense</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="ExpenseName"></label>
                        </div>
                        <div class="col-6">
                            <label asp-for="Amount"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <input asp-for="ExpenseName" class="form-control" />
                        </div>
                        <div class="col-6">
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75"  value="create"/>
                            </div>
                            <div class="col">
                                <a class="nav-link text-dark btn btn-danger w-75" asp-action="Index">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>